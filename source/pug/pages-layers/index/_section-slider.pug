    itemClass: "grid__list__item",
    imageContainerClass: "grid__list__item__container",
    imageWrapperClass: "grid__list__item__wrapper",
    imgs: [
      'img/main-page-slider/1.jpg',
      'img/main-page-slider/2.jpg',
